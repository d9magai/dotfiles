[alias]
	vlog = log --pretty=format:\"%C(red)%h%Creset %C(cyan)<%an>%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset\" --abbrev-commit --date=relative
[user]
	email = kumagai@sencorp.co.jp
	name = d9magai
[push]
	default = current
[color]
	ui = auto
[core]
	autocrlf = false
	excludesFile = ~/.gitignore_global
[url "https://"]
	insteadOf = git://
[http]
        postBuffer = 524288000
        sslVerify = false
[merge]
        tool = p4merge
[mergetool]
        keepBackup = false
[mergetool "p4merge"]
        path = p4merge
        keepTemporaries = false
        trustExitCode = false
